{
	"name": "microfrontend-app-reactjs",
	"version": "0.1.0",
	"files": [
		"/dist"
	],
	"scripts": {
		"prestart": "rimraf .webpack-federation-modules-types",
		"start": "webpack-cli serve",
		"build": "webpack --mode production",
		"serve": "serve dist -p 3001",
		"test": "jest",
		"clean": "rm -rf dist",
		"dev-build": "tsc --noEmit",
		"lint": "eslint src/**/*.{ts,tsx}",
		"lint-errors": "eslint --quiet src/**/*.{ts,tsx}",
		"lint-dir": "eslint --",
		"lint-fix": "eslint --fix src/**/*.{ts,tsx}",
		"lint:css": "stylelint ./src/**/*.{ts,tsx}",
		"prettier-format-all": "prettier --write src/**/*.{json,ts,tsx}",
		"spell-check": "cspell src/**/*.{ts,tsx}",
		"pre-commit": "npm run lint-errors && npm run spell-check && npm run lint:css",
		"pre-push": "npm run test-coverage",
		"test-coverage": "npm run test \"--coverage\" \"--watchAll=false\"",
		"prepare": "husky install"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"babel": {
		"presets": [
			"react-app"
		]
	},
	"dependencies": {
		"history": "^5.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.5",
		"react-router-dom": "^5.3.0",
		"redux": "^4.1.1",
		"typesafe-actions": "^5.1.0"
	},
	"devDependencies": {
		"@babel/core": "7.15.5",
		"@babel/preset-react": "7.14.5",
		"@babel/preset-typescript": "7.15.0",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"@types/enzyme": "^3.10.9",
		"@types/jest": "^26.0.15",
		"@types/js-cookie": "^2.2.4",
		"@types/node": "^12.0.0",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-redux": "^7.1.5",
		"@types/react-router-dom": "^5.1.2",
		"@types/redux-mock-store": "^1.0.1",
		"@typescript-eslint/eslint-plugin": "^2.7.0",
		"@typescript-eslint/parser": "^2.7.0",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
		"babel-preset-react-app": "^10.0.0",
		"bundle-loader": "0.5.6",
		"copy-webpack-plugin": "^9.0.1",
		"cspell": "^5.6.6",
		"cspell-dict-en-gb": "^1.2.4",
		"cspell-dict-en_us": "^1.3.6",
		"cspell-dict-lorem-ipsum": "^1.1.2",
		"dotenv-webpack": "^7.0.3",
		"enzyme": "^3.11.0",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-react-app": "^6.0.0",
		"eslint-plugin-flowtype": "^5.7.2",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-sonarjs": "^0.8.0-125",
		"fork-ts-checker-webpack-plugin": "^6.3.3",
		"html-webpack-plugin": "5.3.2",
		"husky": "^6.0.0",
		"jest": "26.6.0",
		"jest-canvas-mock": "^2.2.0",
		"jest-environment-jsdom-fourteen": "0.1.0",
		"jest-junit": "^10.0.0",
		"jest-sonar-reporter": "^2.0.0",
		"jest-watch-typeahead": "0.4.0",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.1",
		"react-app-polyfill": "^2.0.0",
		"react-scripts": "^4.0.3",
		"redux-devtools-extension": "^2.13.8",
		"redux-mock-store": "^1.5.4",
		"rimraf": "^3.0.2",
		"serve": "12.0.1",
		"stylelint": "^13.13.1",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.8.0",
		"ts-loader": "^9.2.6",
		"tsconfig-paths-webpack-plugin": "^3.5.1",
		"typescript": "^4.1.2",
		"webpack": "5.52.1",
		"webpack-cli": "4.8.0",
		"webpack-dev-server": "4.2.0",
		"webpack5-remote-types-plugin": "^0.1.2"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"eslint --quiet"
		],
		"src/**/*.{css,scss,js,jsx,ts,tsx}": [
			"cspell",
			"stylelint"
		]
	}
}
